{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "outDir": "./build",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "types": ["@cloudflare/workers-types"],
        "lib": ["ES2022"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "**/*.test.ts"]
}